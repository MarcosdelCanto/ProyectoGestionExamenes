{
  // âœ… Formato automÃ¡tico al guardar
  "editor.formatOnSave": true,
  // ğŸ§¼ Prettier como formateador por defecto
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // ğŸ›¡ï¸ Ejecutar ESLint automÃ¡ticamente al guardar
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // ğŸ“‹ Archivos que valida ESLint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // ğŸ” Ocultar carpetas innecesarias en el explorador de VS Code
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.env": true
  },
  // ğŸ”§ Otras buenas prÃ¡cticas
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "onWindowChange"
}

# Variables de entorno para pruebas E2E

# URL base de la aplicación
E2E_BASE_URL=http://localhost:8080

# URLs del API
API_BASE_URL=http://localhost:3000

# Credenciales de prueba (NO usar en producción)
TEST_ADMIN_EMAIL=admin@test.com
TEST_ADMIN_PASSWORD=admin123

TEST_PROFESOR_EMAIL=profesor@test.com
TEST_PROFESOR_PASSWORD=profesor123

TEST_ESTUDIANTE_EMAIL=estudiante@test.com
TEST_ESTUDIANTE_PASSWORD=estudiante123

# Configuración de pruebas
E2E_TIMEOUT=30000
E2E_RETRIES=2
E2E_WORKERS=1

# Base de datos de prueba (si es diferente)
TEST_DB_CONNECTION_STRING=

# Configuración para CI/CD
CI=false
GITHUB_ACTIONS=false

# Configuración de reportes
PLAYWRIGHT_REPORT_DIR=test-results
PLAYWRIGHT_SCREENSHOTS=only-on-failure
PLAYWRIGHT_VIDEOS=retain-on-failure
PLAYWRIGHT_TRACES=retain-on-failure

# Configuración de navegadores
PLAYWRIGHT_BROWSERS=chromium,firefox,webkit
PLAYWRIGHT_HEADED=false

# Debug mode
DEBUG=false
PLAYWRIGHT_DEBUG=false
